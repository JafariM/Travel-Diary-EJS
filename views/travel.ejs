<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

<h2><%= travel ? "Edit Travel" : "Add Travel" %></h2>

<form method="POST" action="<%= travel ? `/travels/update/${travel.id}` : '/travels' %>">
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />

  <label for="placeName">Place Name:</label>
  <input type="text" id="placeName" name="placeName" value="<%= travel ? travel.placeName : '' %>" required />

  <label for="location">Location:</label>
  <input type="text" id="location" name="location" value="<%= travel ? travel.location : '' %>" required />

  <label for="visitDate">Visit Date:</label>
  <input type="date" id="visitDate" name="visitDate" value="<%= travel ? travel.visitDate.toISOString().split('T')[0] : '' %>" required />

  <button type="submit"><%= travel ? "Update Travel" : "Add Travel" %></button>
</form>

<%- include("partials/footer.ejs") %>